---
const { colour, title, type, category } = Astro.props;
---

<div class="flex flex-col gap-12">
  <div
    class="rounded-out border border-stroke-1 h-[45vh] overflow-clip p-64 flex flex-col justify-between"
  >
    <div class="flex gap-24">
      <p class="body">{category}</p>
      <p class="body">{type}</p>
    </div>
    <h1 class="font-hanson text-[92px] w-full leading-none">{title}</h1>
    <div
      class="absolute -z-10 w-[22vw] h-[50vh] rounded-[100%] self-end blur-[10vmax] opacity-50 animate-rotate-slow"
      style=`background-color: ${colour};`
    >
    </div>
  </div>
  <div class="flex gap-12">
    <div
      class="p-24 flex flex-col gap-12 bg-fg-1 border border-stroke-1 rounded-out"
    >
      <h3 class="h3">Contents</h3>
    </div>
    <div class="bg-fg-1 border border-stroke-1 rounded-out p-64 w-full">
      <slot />
    </div>
  </div>
</div>
